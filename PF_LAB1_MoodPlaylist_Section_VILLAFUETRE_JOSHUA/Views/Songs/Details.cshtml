@model PF_LAB1_MoodPlaylist_Section_VILLAFUETRE_JOSHUA.Models.Song

@{
    ViewData["Title"] = "Song Details";
}

<h2>@Model.Title - @Model.Artist</h2>

<div class="card bg-dark text-white p-3">
    <p><strong>Mood:</strong> @Model.Mood</p>
    <p><strong>Playlist:</strong> @Model.Playlist?.Name</p>

    @if (!string.IsNullOrEmpty(Model.VideoId))
    {
        <div class="embed-responsive embed-responsive-16by9">
            <iframe class="embed-responsive-item"
                    src="https://www.youtube.com/embed/@Model.VideoId"
                    frameborder="0"
                    allowfullscreen>
            </iframe>
        </div>
    }
    else if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <img src="@Model.ImageUrl" alt="@Model.Title" width="400" />
    }
    else
    {
        <p class="text-muted">No video or image available.</p>
    }

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
