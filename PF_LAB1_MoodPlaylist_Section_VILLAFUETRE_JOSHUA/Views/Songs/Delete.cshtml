@model PF_LAB1_MoodPlaylist_Section_VILLAFUETRE_JOSHUA.Models.Song

@{
    ViewData["Title"] = "Delete Song";
}

<h2 class="text-white">Delete Song</h2>

<h4 class="text-white">Are you sure you want to delete this song?</h4>

<div class="card bg-dark text-white p-3 mb-3">
    <p><strong>Title:</strong> @Model.Title</p>
    <p><strong>Artist:</strong> @Model.Artist</p>
    <p><strong>Mood:</strong> @Model.Mood</p>
    <p><strong>Playlist:</strong> @Model.Playlist?.Name</p>
    <img src="@Model.ImageUrl" alt="@Model.Title" style="max-width:200px;" class="mt-2" />
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
