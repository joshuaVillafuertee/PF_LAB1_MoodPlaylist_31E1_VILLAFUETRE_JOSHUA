@model PF_LAB1_MoodPlaylist_Section_VILLAFUETRE_JOSHUA.Models.Song

@{
    ViewData["Title"] = "Edit Song";
}

<h2>Edit Song</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Artist"></label>
        <input asp-for="Artist" class="form-control" />
        <span asp-validation-for="Artist" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Mood"></label>
        <input asp-for="Mood" class="form-control" />
        <span asp-validation-for="Mood" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="YouTubeUrl"></label>
        <input asp-for="YouTubeUrl" class="form-control" />
        <span asp-validation-for="YouTubeUrl" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ImageUrl"></label>
        <input asp-for="ImageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PlaylistId"></label>
        <select asp-for="PlaylistId" class="form-control"
                asp-items="@(ViewData["Playlists"] as SelectList)">
            <option value="">-- Select Playlist --</option>
        </select>
        <span asp-validation-for="PlaylistId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
