@model IEnumerable<PF_LAB1_MoodPlaylist_Section_VILLAFUETRE_JOSHUA.Models.Song>

@{
    ViewData["Title"] = "Home Page";
}

<h2 class="text-white">Song List</h2>

@if (Model != null && Model.Any())
{
    <table class="table table-dark table-bordered table-striped text-white">
        <thead>
            <tr>
                <th>Title</th>
                <th>Artist</th>
                <th>Mood</th>
                <th>Playlist</th>
                <th>Thumbnail</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Artist</td>
                    <td>@item.Mood</td>
                    <td>@item.Playlist?.Name</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.ThumbnailUrl))
                        {
                            <img src="@item.ThumbnailUrl" alt="Thumbnail" width="120" />
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-white">No songs found.</p>
}

<style>
    
    .table-dark th,
    .table-dark td {
        color: #ffffff !important;
    }

    
    .table-dark tbody tr:hover {
        background-color: #333 !important;
    }
</style>
