@model PF_LAB1_MoodPlaylist_Section_VILLAFUETRE_JOSHUA.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">

<div style="background-color:black; height:100vh; display:flex; justify-content:center; align-items:center; font-family:'Roboto', sans-serif;">
    <div style="background-color:rgba(0,0,0,0.75); padding:40px; border-radius:8px; width:350px; color:white;">
        <h2 style="margin-bottom:20px; text-align:center;">Register</h2>

        <form asp-action="Register" method="post">
            <div class="form-group">
                <input asp-for="Email" placeholder="Email" class="form-control" style="margin-bottom:15px; padding:12px; border:none; border-radius:4px; width:100%;" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="Password" placeholder="Password" class="form-control" type="password" style="margin-bottom:15px; padding:12px; border:none; border-radius:4px; width:100%;" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="ConfirmPassword" placeholder="Confirm Password" class="form-control" type="password" style="margin-bottom:15px; padding:12px; border:none; border-radius:4px; width:100%;" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" style="background-color:#e50914; border:none; border-radius:4px; padding:12px; width:100%; color:white; font-weight:bold; cursor:pointer;">Register</button>
        </form>

        <p style="margin-top:15px; text-align:center;">Already have an account? <a asp-action="Login" style="color:#e50914;">Login</a></p>
    </div>
</div>
